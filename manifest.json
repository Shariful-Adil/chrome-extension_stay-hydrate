{
  "name": "stay hydrated",
  "description": "remind the time of drinking water.",
  "author": "Md. Shariful Islam Adil",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "scripts/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "html/index.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },
  "omnibox": {
    "keyword": "hydrate"
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "options_ui": {
    "page": "html/settings.html",
    "open_in_tab": true
  },
  "permissions": [
    "contextMenus",
    "storage",
    "alarms",
    "notifications"
  ]
}